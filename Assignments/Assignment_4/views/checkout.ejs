<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout Page</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="container">
        <h1>Checkout</h1>
        <form id="checkoutForm" novalidate>
            <!-- Full Name -->
            <div class="form-group">
                <label for="fullName">Full Name</label>
                <input type="text" id="fullName" name="fullName" required pattern="[A-Za-z ]+">
                <div class="error" id="nameError">Please enter a valid name (alphabets only)</div>
            </div>

            <!-- Email -->
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>
                <div class="error" id="emailError">Please enter a valid email address</div>
            </div>

            <!-- Phone Number -->
            <div class="form-group">
                <label for="phone">Phone Number</label>
                <input type="tel" id="phone" name="phone" required pattern="\d{10,15}">
                <div class="error" id="phoneError">Please enter a valid 10-15 digit phone number</div>
            </div>

            <!-- Address -->
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" id="address" name="address" required>
                <div class="error" id="addressError">Please enter your address</div>
            </div>

            <!-- Credit Card Number -->
            <div class="form-group">
                <label for="cardNumber">Credit Card Number</label>
                <input type="text" id="cardNumber" name="cardNumber" required pattern="\d{16}">
                <div class="error" id="cardError">Please enter a valid 16-digit card number</div>
            </div>

            <!-- Expiry Date and CVV -->
            <div class="form-group" style="display: flex; gap: 1rem;">
                <div style="flex: 1;">
                    <label for="expiry">Expiry Date (MM/YY)</label>
                    <input type="text" id="expiry" name="expiry" required pattern="(0[1-9]|1[0-2])\/\d{2}">
                    <div class="error" id="expiryError">Please enter a valid future date (MM/YY)</div>
                </div>
                <div style="flex: 1;">
                    <label for="cvv">CVV</label>
                    <input type="text" id="cvv" name="cvv" required pattern="\d{3}">
                    <div class="error" id="cvvError">Please enter a 3-digit CVV</div>
                </div>
            </div>

            <button type="submit">Complete Checkout</button>
        </form>
    </div>
    <script src="script.js"></script>
</body>
</html>