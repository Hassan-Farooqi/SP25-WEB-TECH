<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Joseph Fashion - Premium Apparel</title>

</head>
<body>

<!-- Hero Carousel -->
<section id="home" class="hero-carousel mt-5">
    <div id="mainCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://images.unsplash.com/photo-1483985988355-763728e1935b?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80" class="d-block w-100" alt="Fashion 1">
                <div class="carousel-caption d-none d-md-block">
                    <h1 class="display-4">New Autumn Collection</h1>
                    <a href="#products" class="btn btn-danger btn-lg mt-3">Explore Now</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://d2line.com/thatlook/wp-content/uploads/sites/4/2021/12/TSV_0159-800x600.jpg" class="d-block w-100" alt="Fashion 2">
                <div class="carousel-caption d-none d-md-block">
                    <h1 class="display-4">Luxury Redefined</h1>
                    <button class="btn btn-outline-light btn-lg mt-3" data-bs-toggle="modal" data-bs-target="#newsletterModal">
                        Join Newsletter
                    </button>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </button>
    </div>
</section>

<!-- Products Section -->
<section id="products" class="py-5">
    <div class="container">
        <h2 class="text-center mb-5 brand-font">Featured Collection</h2>
        <div class="row g-4">
            <% for (let i = 0; i < products.length; i++) { %>
            <div class="col-md-6 col-lg-4">
                <div class="card product-card h-100">
                    <img src="<%= products[i].image %>" class="card-img-top" alt="<%= products[i].name %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= products[i].name %></h5>
                        <p class="text-danger">$<%= products[i].price %></p>
                        <form action="/cart" method="POST">
                            <input type="hidden" name="productId" value="<%= products[i]._id %>">
                            <input type="hidden" name="name" value="<%= products[i].name %>">
                            <input type="hidden" name="image" value="<%= products[i].image %>">
                            <input type="hidden" name="price" value="<%= products[i].price %>">
                            <button class="btn btn-outline-dark" type="submit">
                                Add to Cart
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</section>


<!-- Newsletter Modal -->
<div class="modal fade" id="newsletterModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Join Our Newsletter</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <input type="email" class="form-control" placeholder="Enter your email">
                    </div>
                    <button class="btn btn-danger w-100">Subscribe</button>
                </form>
            </div>
        </div>
    </div>
</div>

</body>
</html>